<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mail_address_password_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.asahi.com.matometestapp.MailAddressPasswordActivity">

    <include layout="@layout/header_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="メールアドレス・パスワード変更"
        android:textColor="@color/colorLightBlue"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="あなたのメールアドレス"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/mail_address_password_activity_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="xxxxxxxx@xxx.xx.xx"
        android:textSize="20sp"/>

    <View
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/mail_address_password_activity_address_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorVermilion"
        android:onClick="onClick"
        android:text="メールアドレス変更"
        android:textColor="@color/colorWhite"/>

    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/mail_address_password_activity_password_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBlue"
        android:onClick="onClick"
        android:text="パスワード変更"
        android:textColor="@color/colorWhite"/>

    <View
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <include layout="@layout/tab_layout"/>

</LinearLayout>
