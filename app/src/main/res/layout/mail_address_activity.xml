<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mail_address_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.asahi.com.matometestapp.MailAddressActivity">

    <include layout="@layout/header_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="メールアドレス変更"
        android:textColor="@color/colorLightBlue"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="あなたのメールアドレス"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/mail_address_activity_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="xxxxxxxx@xxx.xx.xx"
        android:textSize="20sp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@color/colorGray">

        <TableRow
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="新しい\nメールアドレス"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:inputType="textEmailAddress"
                    android:background="@layout/edit_text_frame"/>
            </FrameLayout>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="新しい\nメールアドレス\n(確認)"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:layout_margin="4dp"
                    android:background="@layout/edit_text_frame"/>
            </FrameLayout>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="パスワード"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:inputType="textPassword"
                    android:background="@layout/edit_text_frame"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="24dp"/>

    <Button
        android:id="@+id/mail_address_activity_button"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorVermilion"
        android:onClick="onClick"
        android:text="変更"
        android:textColor="@color/colorWhite"/>

    <include layout="@layout/tab_layout"/>
</LinearLayout>
