<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/account_information_confirm_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.asahi.com.matometestapp.AccountInformationConfirmActivity">

    <include layout="@layout/header_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="振込先口座の確認・変更"
        android:textColor="@color/colorLightBlue"
        android:textSize="24sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@color/colorGray">

        <TableRow
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="銀行"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="ゆうちょ銀行"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="口座種別"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="普通預金"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="支店コード"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="xxx"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="口座番号"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="xxxxxx"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="口座名義(セイ)"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="ヤマダ"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOcher"
                android:gravity="center"
                android:text="口座名義(名)"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="タロウ"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/account_information_confirm_activity_button"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorVermilion"
        android:onClick="onClick"
        android:text="変更"
        android:textColor="@color/colorWhite"/>

    <include layout="@layout/tab_layout"/>
</LinearLayout>
