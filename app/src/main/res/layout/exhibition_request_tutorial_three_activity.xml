<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/exhibition_request_tutorial_three_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="jp.asahi.com.matometestapp.ExhibitionRequestTutorialThreeActivity">

    <include layout="@layout/header_layout"/>

    <TextView
        android:id="@+id/exhibition_request_tutorial_three_activity_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="32dp"
        android:onClick="onClick"
        android:text="×"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/blue_step3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="宅配キット\n到着・梱包"
            android:textSize="28sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/red_step3_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="宅配キットが到着しましたら、\n付属の緩衝材を利用し、\n売りたい商品を梱包してください。"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/exhibition_request_tutorial_three_activity_button"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorVermilion"
        android:onClick="onClick"
        android:text="次へ"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="○○●○○○"
        android:textSize="60sp"/>

    <include layout="@layout/tab_layout"/>

</LinearLayout>
